<%- include("../partials/header", {title: title}); %>
<div class="container my-3">
    <div class="card my-5">
        <h5 class="card-header">Create a new category</h5>
        <div class="card-body">
            <form class="my-3" method="post" action="/eshop/category/create">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name" aria-describedby="name" value="" />
                </div>

                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>
</div>

