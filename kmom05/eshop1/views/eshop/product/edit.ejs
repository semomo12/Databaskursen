<%- include("../partials/header", {title: title}); %>
<div class="container my-3">
    <div class="card my-5">
        <h5 class="card-header">Edit product</h5>
        <div class="card-body">
            <form class="my-3" method="post" action="/eshop/product/edit">
                <input type="hidden" id="id" readonly name="id" value="<%= res.product_id %>" />

                <div class="mb-3">
                    <label for="product_name" class="form-label">Name</label>
                    <input type="text" class="form-control" name="name" id="product_name" aria-describedby="product_name" value="<%= res.product_name %>" />
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <input type="text" class="form-control" name="description" id="description" description="description" aria-describedby="description" value="<%= res.description %>" />
                </div>

                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" class="form-control" name="price" step=".01" id="price" price="price" aria-describedby="price" value="<%= res.price %>" />
                </div>

                <div class="mb-3">
                    <label for="stock" class="form-label">Stock</label>
                    <input type="number" class="form-control" name="stock_quantity" id="stock_quantity" stock="stock_quantity" aria-describedby="stock_quantity" value="<%= res.stock_quantity %>" />
                </div>

                <% if (edited){ %>
                <p>Product is updated.</p>
                <a href="/eshop/product" class="btn btn-primary me-3">Back</a>
                <% }; %>
                <button type="submit" class="btn btn-primary">Edit</button>
            </form>
        </div>
    </div>
</div>

<%- include("../partials/footer"); %>
